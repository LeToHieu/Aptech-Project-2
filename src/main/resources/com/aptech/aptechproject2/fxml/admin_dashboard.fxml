<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="632.0" prefWidth="1052.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.aptech.aptechproject2.Controller.AdminDashboardController">

    <!-- TOP BAR -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 15; -fx-background-color: #2c3e50;">
            <Label style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: white;" text="BOOKAPP ADMIN" />
            <Region HBox.hgrow="ALWAYS" />
            <Button onAction="#onLogout" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14;" text="Đăng xuất" />
        </HBox>
    </top>

    <!-- LEFT MENU -->
    <left>
        <VBox spacing="10" style="-fx-background-color: #34495e; -fx-padding: 20;">
            <Label style="-fx-text-fill: #bdc3c7; -fx-font-size: 14; -fx-font-weight: bold;" text="QUẢN LÝ" />

            <Button fx:id="usersBtn" alignment="CENTER_LEFT" onAction="#showUsers" prefWidth="200" styleClass="menu-btn" text=" Người dùng">
                <graphic>
                    <Label style="-fx-text-fill: white;" text="[User Icon]" />
                </graphic>
            </Button>

            <Button fx:id="booksBtn" alignment="CENTER_LEFT" onAction="#showBooks" prefWidth="200" styleClass="menu-btn" text=" Sách">
                <graphic>
                    <Label style="-fx-text-fill: white;" text="[Book Icon]" />
                </graphic>
            </Button>

            <Button fx:id="authorsBtn" alignment="CENTER_LEFT" onAction="#showAuthors" prefWidth="200" styleClass="menu-btn" text=" Tác giả">
                <graphic>
                    <Label style="-fx-text-fill: white;" text="[Author Icon]" />
                </graphic>
            </Button>

            <Separator style="-fx-background-color: #2c3e50;" />

            <Button onAction="#onLogout" prefWidth="200" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text=" Đăng xuất" />
        </VBox>
    </left>

    <!-- CENTER: NỘI DUNG ĐỘNG -->
    <center>
        <StackPane fx:id="contentArea" prefHeight="1000.0" prefWidth="1000.0" style="-fx-padding: 20;">
            <!-- Nội dung sẽ được load động vào đây -->
        </StackPane>
    </center>

</BorderPane>
