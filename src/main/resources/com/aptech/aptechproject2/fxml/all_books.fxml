<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.aptech.aptechproject2.Controller.AllBooksController"
            style="-fx-padding: 20; -fx-background-color: #f8f9fa;">

    <!-- Center: All books grid -->
    <center>
        <VBox spacing="10">
            <Label text="Tất cả sách" style="-fx-font-size: 20; -fx-font-weight: bold;"/>

            <!-- Back button -->
            <Button text="Quay lại" onAction="#onBack"/>

            <!-- All books grid -->
            <ScrollPane fitToWidth="true">
                <GridPane fx:id="allBooksGrid" hgap="20" vgap="20"/>
            </ScrollPane>
        </VBox>
    </center>

</BorderPane>