<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.aptech.aptechproject2.Controller.BorrowListController">
    <top>
        <VBox spacing="10" style="-fx-padding: 15; -fx-background-color: #f8f9fa;">
            <Label text="QUẢN LÝ MƯỢN SÁCH" style="-fx-font-size: 20; -fx-font-weight: bold;"/>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <ComboBox fx:id="userCombo" prefWidth="200" promptText="Chọn người dùng"/>
                <ComboBox fx:id="bookCombo" prefWidth="250" promptText="Chọn sách"/>
                <Button fx:id="borrowBtn" text="Mượn" onAction="#onBorrow" style="-fx-background-color: #28a745; -fx-text-fill: white;"/>
                <Button fx:id="returnBtn" text="Trả" onAction="#onReturn" style="-fx-background-color: #ffc107;"/>
                <Button fx:id="editBtn" text="Sửa" onAction="#onEdit"/>
                <Button fx:id="deleteBtn" text="Xóa" onAction="#onDelete"/>
                <Button text="Làm mới" onAction="#onRefresh"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Đăng xuất" onAction="#onLogout" style="-fx-background-color: #dc3545; -fx-text-fill: white;"/>
            </HBox>
        </VBox>
    </top>
    <center>
        <TableView fx:id="borrowTable" prefHeight="500">
            <columns>
                <TableColumn fx:id="idCol" text="ID" prefWidth="50"/>
                <TableColumn fx:id="userCol" text="Người mượn" prefWidth="150"/>
                <TableColumn fx:id="bookCol" text="Sách" prefWidth="200"/>
                <TableColumn fx:id="borrowDayCol" text="Ngày mượn" prefWidth="140"/>
                <TableColumn fx:id="expireDayCol" text="Hạn trả" prefWidth="140"/>
                <TableColumn fx:id="returnDayCol" text="Ngày trả" prefWidth="140"/>
                <TableColumn fx:id="statusCol" text="Trạng thái" prefWidth="100"/>
            </columns>
        </TableView>
    </center>
</BorderPane>